// ============================================
// Ascension Example: Controllo di Flusso
// if/else, while, for, switch
// ============================================

print("=== CONTROLLO DI FLUSSO ===\n");

// IF / ELSE IF / ELSE
print("--- IF / ELSE ---");
eta = 25;

if (eta < 18) {
    print("Sei minorenne");
} else if (eta < 65) {
    print("Sei adulto");
} else {
    print("Sei anziano");
}

// Operatori di confronto
print("\n--- Confronti ---");
x = 10;
y = 20;

if (x == y) {
    print("x e y sono uguali");
}
if (x != y) {
    print("x e y sono diversi");
}
if (x < y) {
    print("x e' minore di y");
}
if (x <= y) {
    print("x e' minore o uguale a y");
}

// Operatori logici
print("\n--- Operatori Logici ---");
a = true;
b = false;

if (a && b) {
    print("a AND b = true");
} else {
    print("a AND b = false");
}

if (a || b) {
    print("a OR b = true");
} else {
    print("a OR b = false");
}

if (!b) {
    print("NOT b = true");
}

// WHILE loop
print("\n--- WHILE Loop ---");
print("Conto da 1 a 5:");
i = 1;
while (i <= 5) {
    print(i);
    i = i + 1;
}

// FOR loop
print("\n--- FOR Loop ---");
print("Conto da 0 a 4:");
for (j = 0; j < 5; j = j + 1) {
    print(j);
}

// BREAK
print("\n--- BREAK ---");
print("Loop con break a 3:");
for (k = 0; k < 10; k = k + 1) {
    if (k == 3) {
        print("Break!");
        break;
    }
    print(k);
}

// Loop annidati
print("\n--- Loop Annidati ---");
print("Tabellina del 3:");
for (m = 1; m <= 5; m = m + 1) {
    risultato = 3 * m;
    print("3 x " + m + " = " + risultato);
}

// SWITCH
print("\n--- SWITCH ---");
giorno = 3;
switch (giorno) {
    case 1:
        print("Lunedi");
        break;
    case 2:
        print("Martedi");
        break;
    case 3:
        print("Mercoledi");
        break;
    default:
        print("Altro giorno");
}

print("\n=== FINE ESEMPIO ===");
