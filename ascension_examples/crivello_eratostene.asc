//crivello di eratostene

func crivello(n) {
    array primi[n];

    // inizializza tutti a 1 (primi)
    for (i = 0; i < n; i = i + 1) {
        primi[i] = 1;
    }

    // 0 e 1 non sono primi
    primi[0] = 0;
    primi[1] = 0;

    // setaccia
    for (i = 2; i < n; i = i + 1) {
        if (primi[i] == 1) {
            // elimina tutti i multipli di i
            for (j = i + i; j < n; j = j + i) {
                primi[j] = 0;
            }
        }
    }

    // stampa i primi
    for (i = 0; i < n; i = i + 1) {
        if (primi[i] == 1) {
            print(i);
        }
    }
}
//provalo con 100 poi 1000, 10000, 1000000
crivello(100);
