// Test per capire come funzionano i caratteri

s = "2+3";

print("Stringa: " + s);
print("Lunghezza: " + len(s));

// Test accesso carattere
c = s[1];
print("s[1] = " + c);
print("Tipo s[1] con str(): " + str(c));

// Test substr
ch = substr(s, 1, 1);
print("substr(s,1,1) = " + ch);

// Confronti
print("\n--- TEST CONFRONTI ---");

if (c == "+") {
    print("c == \"+\" : TRUE");
} else {
    print("c == \"+\" : FALSE");
}

if (ch == "+") {
    print("ch == \"+\" : TRUE");
} else {
    print("ch == \"+\" : FALSE");
}

if (c == 43) {
    print("c == 43 (ASCII +) : TRUE");
} else {
    print("c == 43 (ASCII +) : FALSE");
}

if (str(c) == "+") {
    print("str(c) == \"+\" : TRUE");
} else {
    print("str(c) == \"+\" : FALSE");
}

// Test chr e ord se esistono
print("\n--- TEST ORD ---");
print("ord(\"+\") = " + ord("+"));

// Scan manuale
print("\n--- SCAN STRINGA ---");
i = 0;
while (i < len(s)) {
    carattere = substr(s, i, 1);
    print("pos " + i + ": '" + carattere + "'");
    if (carattere == "+") {
        print("  ^^ TROVATO + alla posizione " + i);
    }
    i = i + 1;
}
