// ============================================
// Ascension Example: Array e Matrici
// Array 1D, array 2D (Matrix Edition)
// ============================================

print("=== ARRAY E MATRICI ===\n");

// Array 1D - creazione e accesso
print("--- Array 1D ---");

// In Ascension gli array si creano assegnando elementi
numeri[0] = 10;
numeri[1] = 20;
numeri[2] = 30;
numeri[3] = 40;
numeri[4] = 50;

print("Array: [10, 20, 30, 40, 50]");
print("Primo elemento (indice 0): ", numeri[0]);
print("Terzo elemento (indice 2): ", numeri[2]);

// Modifica elementi
numeri[1] = 25;
print("Dopo numeri[1] = 25:", numeri[1]);

// Lunghezza array
print("Lunghezza array: ", len(numeri));

// Iterare su array
print("\nTutti gli elementi:");
for (i = 0; i < len(numeri); i = i + 1) {
    print(numeri[i]);
}

// Array di stringhe
print("\n--- Array di Stringhe ---");
frutti[0] = "Mela";
frutti[1] = "Banana";
frutti[2] = "Arancia";

for (i = 0; i < len(frutti); i = i + 1) {
    print(frutti[i]);
}

// Array vuoto e costruzione dinamica
print("\n--- Costruzione dinamica ---");
lista[0] = "Primo";
lista[1] = "Secondo";
lista[2] = "Terzo";
print("Lista costruita:");
for (i = 0; i < 3; i = i + 1) {
    print(lista[i]);
}

// ============================================
// MATRICI (Array 2D) - Matrix Edition
// ============================================

print("\n--- MATRICI 2D ---");

// Creazione matrice con matrix(righe, colonne, valore_iniziale)
mat = matrix(3, 3, 0);
print("Matrice 3x3 inizializzata a 0");

// Accesso e modifica con sintassi [r][c]
mat[0][0] = 1;
mat[0][1] = 2;
mat[0][2] = 3;
mat[1][0] = 4;
mat[1][1] = 5;
mat[1][2] = 6;
mat[2][0] = 7;
mat[2][1] = 8;
mat[2][2] = 9;

// Stampa matrice
print("\nMatrice popolata:");
for (r = 0; r < 3; r = r + 1) {
    riga = "";
    for (c = 0; c < 3; c = c + 1) {
        riga = riga + mat[r][c] + " ";
    }
    print(riga);
}

// Accesso con sintassi comma: mat[r,c]
print("\nAccesso con sintassi mat[1,1]: ", mat[1,1]);

// Dimensioni matrice
print("\nDimensioni:");
print("Righe: ", rows(mat));
print("Colonne: ", cols(mat));

// Somma elementi matrice
print("\n--- Somma elementi ---");
totale = 0;
for (r = 0; r < rows(mat); r = r + 1) {
    for (c = 0; c < cols(mat); c = c + 1) {
        totale = totale + mat[r][c];
    }
}
print("Somma di tutti gli elementi: ", totale);

// Matrice identita'
print("\n--- Matrice Identita 4x4 ---");
identita = matrix(4, 4, 0);
for (i = 0; i < 4; i = i + 1) {
    identita[i][i] = 1;
}

for (r = 0; r < 4; r = r + 1) {
    riga = "";
    for (c = 0; c < 4; c = c + 1) {
        riga = riga + identita[r][c] + " ";
    }
    print(riga);
}

print("\n=== FINE ESEMPIO ===");
