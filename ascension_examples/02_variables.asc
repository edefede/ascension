// ============================================
// Ascension Example: Variabili e Tipi
// Numeri, stringhe, operazioni
// ============================================

print("=== VARIABILI E TIPI ===\n");

// Numeri interi
a = 10;
b = 3;
print("a = 10, b = 3");

// Operazioni aritmetiche
print("\n--- Operazioni Aritmetiche ---");
print("a + b = ");
print(a + b);
print("a - b = ");
print(a - b);
print("a * b = ");
print(a * b);
print("a / b = ");
print(a / b);
print("a % b (modulo) = ");
print(a % b);

// Float
print("\n--- Numeri Decimali ---");
pi = 3.14159;
print("Pi greco: ");
print(pi);

// Stringhe
print("\n--- Stringhe ---");
saluto = "Ciao";
nome = "Mondo";
messaggio = saluto + " " + nome + "!";
print(messaggio);

// Lunghezza stringa
print("Lunghezza messaggio: ");
print(len(messaggio));

// Accesso caratteri
print("Primo carattere: ");
print(messaggio[0]);
print("Secondo carattere: ");
print(messaggio[1]);

// Booleani
print("\n--- Booleani ---");
vero = true;
falso = false;
print("true = ");
print(vero);
print("false = ");
print(falso);

// NULL
print("\n--- NULL ---");
vuoto = NULL;
print("Valore NULL: ");
print(vuoto);

